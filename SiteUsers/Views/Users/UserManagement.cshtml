
@{
    ViewBag.Title = "UserManagement";
}
@using SiteUsers.Models


@model IEnumerable<User>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Users List</h2>
            <br />
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Género</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.DateOfBirth.ToString("dd/MM/yyyy")</td>
                            <td>@(user.Gender == "M" ? "Masculino" : "Femenino")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Users", new { id = user.Id })" class="btn btn-outline-primary btn-custom">Edit</a>
                                <a href="@Url.Action("Delete", "Users", new { id = user.Id })" class="btn btn-outline-danger btn-dama">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>